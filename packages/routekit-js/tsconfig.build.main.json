{
  "extends": "../tsconfig.checks.json",
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/main",
    "declarationDir": "dist/typings",
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "removeComments": false,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}